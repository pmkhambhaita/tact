{
  "expo": {
    "name": "Tact",
    "slug": "tact-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "tact",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tact.mobile",
      "infoPlist": {
        "NSMotionUsageDescription": "Used for subtle card tilt effects based on device motion"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "package": "com.tact.mobile"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-sensors",
        {
          "motionPermission": "Allow Tact to access device motion for subtle UI effects"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
